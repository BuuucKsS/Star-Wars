{% extends "base.twig" %}

{% block main %}
    <div class="vaisseaux-container">
        {% for vaisseau in vaisseaux %}
            <div class="vaisseau-card {{ vaisseau.couleur|lower }}">
                <h3>{{ vaisseau.nom }}</h3>
                <img src="{{ vaisseau.image }}" alt="{{ vaisseau.nom }}" class="vaisseau-image">
                <p><strong>Description :</strong> {{ vaisseau.description }}</p>
                <p><strong>Rôle :</strong> {{ vaisseau.role }}</p>
                <p><strong>Apparitions :</strong> {{ vaisseau.apparitions }}</p>
                <p><strong>Capacités :</strong> {{ vaisseau.capacités }}</p>
                <p><strong>Point faible :</strong> {{ vaisseau.point_faible }}</p>
                <p><strong>Fabricant :</strong> {{ vaisseau.fabricant }}</p>
                <p><strong>Taille :</strong> {{ vaisseau.taille }}</p>
                <p><strong>Vitesse maximale :</strong> {{ vaisseau.vitesse_max }}</p>
                <a href="{{ vaisseau.lien }}" target="_blank"><i class="bi bi-arrow-right fleched"></i></a>
            </div>
        {% endfor %}
    </div>
{% endblock main %}