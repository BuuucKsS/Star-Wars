{% extends "base.twig" %}

{% block main %}
{% if lang == 'en' %}
    <div class="vaisseaux-container">
        {% for vaisseau in vaisseaux %}
            <div class="vaisseau-card {{ vaisseau.couleur|lower }}">
                <h3>{{ vaisseau.nom }}</h3>
                <img src="{{ vaisseau.image }}" alt="{{ vaisseau.nom }}" class="vaisseau-image">
                <p><strong>Description :</strong> {{ vaisseau.description }}</p>
                <p><strong>Role :</strong> {{ vaisseau.role }}</p>
                <p><strong>Appearances :</strong> {{ vaisseau.apparitions }}</p>
                <p><strong>Capabilities :</strong> {{ vaisseau.capacités }}</p>
                <p><strong>Weakness :</strong> {{ vaisseau.point_faible }}</p>
                <strong>Characteristics :</strong>
                <ul>
                    <li><strong>Manufacturer:</strong> {{ vaisseau.caractéristiques.fabricant }}</li>
                    <li><strong>Size :</strong> {{ vaisseau.caractéristiques.taille }}</li>
                    <li><strong>Weight :</strong> {{ vaisseau.caractéristiques.poids }}</li>
                    <li><strong>Autonomy :</strong> {{ vaisseau.caractéristiques.autonomie }}</li>
                    <li>
                        <strong>Speed :</strong>
                        <ul>
                            <li><strong>Max Speed :</strong> {{ vaisseau.caractéristiques.vitesse.vitesse_max }}</li>
                            <li><strong>Hyperspace Speed :</strong> {{ vaisseau.caractéristiques.vitesse.vitesse_hyperespace }}</li>
                            <li><strong>Acceleration :</strong> {{ vaisseau.caractéristiques.vitesse.accélération }}</li>
                        </ul>
                    </li>
                </ul>
                <a href="{{ vaisseau.lien }}" target="_blank"><i class="bi bi-arrow-right fleched"></i></a>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="vaisseaux-container">
        {% for vaisseau in vaisseaux %}
            <div class="vaisseau-card {{ vaisseau.couleur|lower }}">
                <h3>{{ vaisseau.nom }}</h3>
                <img src="{{ vaisseau.image }}" alt="{{ vaisseau.nom }}" class="vaisseau-image">
                <p><strong>Description :</strong> {{ vaisseau.description }}</p>
                <p><strong>Rôle :</strong> {{ vaisseau.role }}</p>
                <p><strong>Apparitions :</strong> {{ vaisseau.apparitions }}</p>
                <p><strong>Capacités :</strong> {{ vaisseau.capacités }}</p>
                <p><strong>Point faible :</strong> {{ vaisseau.point_faible }}</p>
                <strong>Caractéristiques :</strong>
                <ul>
                    <li><strong>Fabricant :</strong> {{ vaisseau.caractéristiques.fabricant }}</li>
                    <li><strong>Taille :</strong> {{ vaisseau.caractéristiques.taille }}</li>
                    <li><strong>Poids :</strong> {{ vaisseau.caractéristiques.poids }}</li>
                    <li><strong>Autonomie :</strong> {{ vaisseau.caractéristiques.autonomie }}</li>
                    <li>
                        <strong>Vitesse :</strong>
                        <ul>
                            <li><strong>Vitesse Max :</strong> {{ vaisseau.caractéristiques.vitesse.vitesse_max }}</li>
                            <li><strong>Vitesse Hyperespace :</strong> {{ vaisseau.caractéristiques.vitesse.vitesse_hyperespace }}</li>
                            <li><strong>Accélération :</strong> {{ vaisseau.caractéristiques.vitesse.accélération }}</li>
                        </ul>
                    </li>
                </ul>
                <a href="{{ vaisseau.lien }}" target="_blank"><i class="bi bi-arrow-right fleched"></i></a>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock main %}